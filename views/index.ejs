<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/d24920b36a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/style.css">
    <title>Gorcery List</title>
</head>

<body>
    <h1>Gorcery List</h1>

    <section class="contentContainer">
        <ul class="list">
                <% for(let i = 0; i < list.length; i++){ %>
                    <li class="item">
                    <% if(list[i].completed === true) {%>
                        <section class="itemInCart"> <%= list[i].item %></section>
                    <% }else{ %>
                        <section class="notInCart"><%= list[i].item %></section>
                    <% } %>
                    <section class="fa-solid fa-trash"></section>
                    </li>
                    <!-- spans in ejs create issues for event listeners -->
               <% } %>
        </ul>

        <h3>Add Item: </h3>
        <form action="/addTolist" method="POST">
            <input type="text" placeholder="Gorcery Item" name="groceryItem">
            <input type="submit">
        </form>
    </section>

    <script src='js/main.js'></script>
</body>
</html>